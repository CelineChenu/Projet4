{% extends "base.html.twig" %}
{% form_theme formInfo 'bootstrap_4_layout.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div>
        <h2>{{"Informations du titulaire du ticket"|trans}}</h2>
        <p> {{ "Les billets sont nominatifs, merci de fournir les informations demandées pour chaque titulaire."|trans }}</p>
    </div>
    <div class="row" id="rangee">
    <div id="colonne" class="col-sm-8">
    {{ form_start(formInfo) }}
        {# iterate over each existing tag and render its only field: name #}
        {% for ticket in formInfo.tickets %}
        <div class="form-group">
            <div class="form">
            {{ form_row(ticket.firstname, {'label':'Prénom'|trans, 'attr': {'placeholder': "Prénom du titulaire du ticket"|trans}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="form">
            {{ form_row(ticket.lastname, {'label':'Nom'|trans, 'attr': {'placeholder': "Nom du titulaire du ticket"|trans}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="form">
            {{ form_row(ticket.birthdate, {'label':'Date de naissance'|trans}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="form">
            {{ form_row(ticket.country, {'label':'Pays'|trans, 'attr': {'placeholder': "Pays du titulaire du ticket"|trans}})}}
            </div>
        </div>
        <div class="form-group">
            <div class="form">
            {{ form_row(ticket.dayticket, {'label':'Type de ticket'|trans})}}
            </div>
        </div>
        <div class="form-group">
            <div class="form">
            {{ form_row(ticket.discountticket, {'label':'Tarif réduit'|trans})}}
            </div>
        </div>
        {% endfor %}

    <button type="submit" class="btn btn-success">{{"Valider"|trans}}</button>
    </div>
    <div id="colonne" class="col-sm-4">
        {{ include ('infos_pratiques.html.twig') }}
    </div>
    </div>
    {{ form_end(formInfo) }}
{% endblock %}